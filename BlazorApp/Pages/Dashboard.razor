@page "/dashboard"
@inject IJSRuntime jsRuntime

<MudContainer Class="mt-8 px-8" MaxWidth="MaxWidth.False">
    <MudGrid>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="pa-1" Style="height: 200px;">
                <div id="line_chart" style="width: 100%;height:100%;"></div>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">
                <div id="dougnut_chart" style="width: 100%;height:100%;"></div>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="12" md="4">
            <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">
                <div id="pie_chart" style="width: 100%;height:100%;"></div>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudGrid>
                <MudItem xs="12">
                    <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">
                        <div id="dynamic_chart" style="width: 100%;height:100%;"></div>
                    </MudPaper>
                </MudItem>
                <MudItem xs="12">
                    <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">
                         <div id="bar_chart" style="width: 100%;height:100%;"></div>
                    </MudPaper>
                </MudItem>
            </MudGrid>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudPaper Elevation="2" Class="pa-0" Style="height: 100%; ">
                <div id="map" style="height:100%;width:100%;"> </div>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
